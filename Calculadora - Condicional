#include<stdio.h>
#include<stdlib.h>

int main ()
{
	float soma,multiplicacao,subtracao,divisao,delta,num1,num2,num3;
	int opcao;
	
	
	
	printf("Digite a opcao desejada:\n1 - Somar\n2 - Subtrair\n3 - Multiplicar\n4 - Dividir\n5 - Delta \n");
	scanf("%d",&opcao);
	
	switch(opcao)
	{
		case 1:
			scanf("%f",&num1);
			scanf("%f",&num2);
			soma=num1+num2;
			printf("Resultado: %.2f",soma);
			break;
			
			case 2:
			scanf("%f",&num1);
			scanf("%f",&num2);
			subtracao=num1-num2;
			printf("Resultado: %.2f",subtracao);
			break;
			
			case 3:
			scanf("%f",&num1);
			scanf("%f",&num2);
			multiplicacao=num1*num2;
			printf("Resultado: %.2f",multiplicacao);
			break;
			
			case 4:
			scanf("%f",&num1);
			scanf("%f",&num2);
			divisao=num1/num2;
			printf("Resultado: %.2f",divisao);
			break;
			
			case 5:
			scanf("%f",&num1);
			scanf("%f",&num2);
			scanf("%f",&num3);
			delta=(num2*num2)-4*num1*num3;
			printf("Resultado: %.2f",delta);
			break;
			
									
						
	}
}
